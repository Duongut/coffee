@model Category
@{
    ViewData["Title"] = "Delete Category";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h1 class="h3 mb-3 text-danger">
            <i class="bi bi-exclamation-triangle"></i> Delete Category
        </h1>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">
                <i class="bi bi-exclamation-triangle"></i> Confirm Deletion
            </h4>
            <p>Are you sure you want to delete this category? This action cannot be undone.</p>
            <hr>
            <p class="mb-0">
                <strong>Warning:</strong> If this category has associated products, the deletion may fail.
            </p>
        </div>

        <div class="card shadow">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Name:</dt>
                    <dd class="col-sm-9">
                        <h5 class="mb-0">@Model.Name</h5>
                    </dd>

                    <dt class="col-sm-3">Description:</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <p class="mb-0">@Model.Description</p>
                        }
                        else
                        {
                            <em class="text-muted">No description provided</em>
                        }
                    </dd>

                    <dt class="col-sm-3">Status:</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle"></i> Active
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">
                                <i class="bi bi-x-circle"></i> Inactive
                            </span>
                        }
                    </dd>

                    <dt class="col-sm-3">Created:</dt>
                    <dd class="col-sm-9">@Model.CreatedAt.ToString("MMMM dd, yyyy 'at' h:mm tt")</dd>
                </dl>

                <form asp-action="Delete" method="post" class="mt-4">
                    <input asp-for="Id" type="hidden" />
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary me-md-2">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete Category
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h6 class="card-title mb-0">
                    <i class="bi bi-exclamation-triangle"></i> Deletion Impact
                </h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                        <i class="bi bi-x text-danger"></i>
                        Category will be permanently removed
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-x text-danger"></i>
                        Cannot be recovered after deletion
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-exclamation-triangle text-warning"></i>
                        Products in this category may be affected
                    </li>
                    <li>
                        <i class="bi bi-info-circle text-info"></i>
                        Consider deactivating instead
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
